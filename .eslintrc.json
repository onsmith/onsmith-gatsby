{
  "env": {
    "node": true,
    "es6": true
  },

  "extends": [
    "react-app",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "globals": {
    "window": true,
    "document": true
  },

  "plugins": ["react"],

  "rules": {
    "react/prop-types": "off"
  }
}
